{
  "expo": {
    "name": "PiezasYA",
    "slug": "piezasya-mobile",
    "version": "1.4.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon-new.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/piezasya.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1A"
    },
    "assetBundlePatterns": [
      "assets/*",
      "src/assets/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.piezasya.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon-new.png",
        "backgroundColor": "#FFD700"
      },
      "package": "com.piezasya.mobile"
    },
    "web": {
      "favicon": "./assets/icon-new.png"
    },
    "scheme": "piezasya",
    "plugins": [
      "expo-router",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "updates": {
      "enabled": false,
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
